<Window x:Class="BarcodeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodeApp"
        xmlns:controls="clr-namespace:BarcodeApp.Controls"
        xmlns:views="clr-namespace:BarcodeApp.Views"
        mc:Ignorable="d"
        Title="Barcode Generator" 
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontSize="13"
        FontFamily="Segoe UI"
        Background="{DynamicResource MaterialDesignBackground}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Grid Margin="16" UseLayoutRounding="True" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar with theme toggle -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <CheckBox Content="Dark Theme"
                      IsChecked="{Binding IsDarkTheme}"
                      HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- Main content area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480" MinWidth="400"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left panel: Input & Settings -->
            <Border Grid.Column="0" Margin="0,0,8,0" Padding="16" Style="{StaticResource MaterialCard}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="0,0,8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Barcode Settings" 
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,0,0,16"/>

                    <!-- Data Input -->
                    <TextBlock Grid.Row="1"
                               Text="Barcode Data" 
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                               Margin="0,0,0,4"/>
                    <TextBox Grid.Row="2"
                             Text="{Binding InputData, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,8"/>

                    <!-- Validation Icon -->
                    <Border Grid.Row="3"
                            BorderBrush="{Binding IsInputValid, Converter={StaticResource BooleanToBrushConverter}}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="10,8"
                            Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasInputBeenEntered}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsInputValid}" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#2E7D32" Opacity="0.18"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsInputValid}" Value="False">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#C62828" Opacity="0.18"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.15" Color="Black"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <controls:IconControl Kind="CheckCircle" 
                                           Foreground="{StaticResource SuccessBrush}"
                                           Visibility="{Binding IsInputValid, Converter={StaticResource BooleanToVisibilityConverter}}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Width="20" Height="20"/>
                            <controls:IconControl Kind="AlertCircle" 
                                           Foreground="{StaticResource ErrorBrush}"
                                           Visibility="{Binding IsInputValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Width="20" Height="20"/>
                            <TextBlock Text="{Binding ValidationMessage}"
                                       Foreground="{Binding IsInputValid, Converter={StaticResource BooleanToBrushConverter}}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Symbology Selector -->
                    <TextBlock Grid.Row="4"
                               Text="Symbology" 
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                               Margin="0,0,0,4"/>
                    <ComboBox Grid.Row="5"
                              ItemsSource="{Binding Source={x:Static local:MainWindow.Symbologies}}"
                              SelectedItem="{Binding SelectedSymbology}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,16"/>

                    <!-- Module Width -->
                    <TextBlock Grid.Row="6"
                               Text="{Binding ModuleWidth, StringFormat='Module Width: {0}'}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               FontWeight="Medium"
                               Margin="0,0,0,8"/>
                    <Slider Grid.Row="7"
                            Value="{Binding ModuleWidth}"
                            Minimum="1"
                            Maximum="10"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            Style="{StaticResource MaterialSlider}"
                            Margin="0,0,0,16"/>

                    <!-- Barcode Height -->
                    <TextBlock Grid.Row="8"
                               Text="{Binding BarcodeHeight, StringFormat='Height: {0}px'}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               FontWeight="Medium"
                               Margin="0,0,0,8"/>
                    <Slider Grid.Row="9"
                            Value="{Binding BarcodeHeight}"
                            Minimum="50"
                            Maximum="300"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            Style="{StaticResource MaterialSlider}"
                            Margin="0,0,0,16"/>

                    <!-- Show Text Toggle -->
                    <CheckBox Grid.Row="10"
                              Content="Show Human-Readable Text"
                              IsChecked="{Binding ShowText}"
                              Style="{StaticResource MaterialDesignCheckBox}"
                              Margin="0,0,0,16"/>

                    <!-- Spacer to push content up -->
                    <Grid Grid.Row="11"/>

                    <!-- Bottom section - Printer, Layout, Quantity, Print -->
                    <StackPanel Grid.Row="12"
                                VerticalAlignment="Bottom">
                        <!-- Batch Mode -->
                        <Button Content="Load Batch File"
                                Command="{Binding LoadBatchFileCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,0,12"/>
                        <StackPanel Visibility="{Binding IsBatchMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Margin="0,0,0,12">
                            <Button Content="Manage Batch"
                                    Command="{Binding ManageBatchCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,8"/>
                            <Button Content="Clear Batch"
                                    Command="{Binding ClearBatchCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,8"/>
                            <Button Content="Print Options"
                                    Command="{Binding ShowPrintOptionsCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding BatchItems.Count, StringFormat='Batch Items: {0}'}"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding BatchFileName, StringFormat='File: {0}'}"
                                       Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                                       FontSize="11"
                                       TextTrimming="CharacterEllipsis"
                                       Visibility="{Binding BatchFileName, Converter={StaticResource StringToVisibilityConverter}}"
                                       Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <TextBlock Text="{Binding ValidBatchItemsCount, StringFormat='Valid: {0}'}"
                                           Foreground="{StaticResource SuccessBrush}"
                                           FontSize="11"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding InvalidBatchItemsCount, StringFormat='Invalid: {0}'}"
                                           Foreground="{StaticResource ErrorBrush}"
                                           FontSize="11"
                                           Visibility="{Binding InvalidBatchItemsCount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Printer Selection -->
                        <TextBlock Text="Printer" 
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding AvailablePrinters}"
                                  SelectedItem="{Binding SelectedPrinter}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,16"/>

                        <!-- Layout Selection -->
                        <TextBlock Text="Label Layout" 
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                                   Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding AvailableLayouts}"
                                  SelectedItem="{Binding SelectedLayout}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,16"/>

                        <!-- Quantity -->
                        <TextBlock Text="Quantity" 
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Quantity}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"/>

                        <!-- Print Button -->
                        <Button Content="Print Now"
                                Command="{Binding PrintNowCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                IsEnabled="{Binding IsLicenseValid}"/>
                    </StackPanel>
                </Grid>
                </ScrollViewer>
            </Border>

            <!-- Right panel: Live Preview -->
            <Border Grid.Column="1" Padding="16" Style="{StaticResource MaterialCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Live Preview"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0,0,0,16"/>

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                        <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="3"
                                Background="{DynamicResource MaterialDesignPaper}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="32"
                                CornerRadius="6"
                                MinHeight="300"
                                MinWidth="300">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Image Source="{Binding PreviewImage}"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       MaxWidth="480"
                                       MaxHeight="400"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                                       RenderOptions.EdgeMode="Aliased"
                                       RenderOptions.CachingHint="Cache"
                                       RenderOptions.ClearTypeHint="Enabled"
                                       UseLayoutRounding="True"
                                       SnapsToDevicePixels="True">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PreviewImage}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock Text="Enter barcode data to see preview"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           FontWeight="Medium"
                                           FontStyle="Italic"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="#424242" Opacity="0.6"/>
                                    </TextBlock.Foreground>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PreviewImage}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status bar with license badge -->
        <DockPanel Grid.Row="2" Margin="0,16,0,0">
            <Border Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="2"
                    CornerRadius="20"
                    Padding="16,10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    MouseDown="LicenseBadge_MouseDown">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.15" Color="Black"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" 
                             Margin="0,0,10,0"
                             VerticalAlignment="Center"
                             StrokeThickness="0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLicenseValid}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLicenseValid}" Value="False">
                                        <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding LicenseStatusText}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>
