<Window x:Class="BarcodeApp.Views.BatchErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BarcodeApp.Converters"
        Title="Partii viga" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontSize="13"
        FontFamily="Segoe UI"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/MaterialDesignStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters -->
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding ErrorTitle}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <Button Grid.Column="1"
                    Content="Ã—"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="36"
                    Height="36"
                    Padding="0"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Sulge"
                    Foreground="{DynamicResource MaterialDesignBody}"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,16"/>
                <TextBlock Text="{Binding ErrorDetails}"
                           Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                           TextWrapping="Wrap"
                           FontSize="12"
                           Visibility="{Binding ErrorDetails, Converter={StaticResource StringToVisibilityConverter}}"
                           Margin="0,0,0,16"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>

