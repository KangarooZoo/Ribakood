<Window x:Class="BarcodeApp.Views.BatchManagementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BarcodeApp.Converters"
        xmlns:models="clr-namespace:BarcodeApp.Models"
        Title="Partii haldus" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontSize="13"
        FontFamily="Segoe UI"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/MaterialDesignStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Partii haldus"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <Button Grid.Column="1"
                    Content="×"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="36"
                    Height="36"
                    Padding="0"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Sulge"
                    Foreground="{DynamicResource MaterialDesignBody}"/>
        </Grid>

        <!-- Statistics -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12">
                <StackPanel>
                    <TextBlock Text="Kokku üksusi"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"/>
                    <TextBlock Text="{Binding TotalItems}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="8,0">
                <StackPanel>
                    <TextBlock Text="Kehtiv"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"/>
                    <TextBlock Text="{Binding ValidItems}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" 
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12">
                <StackPanel>
                    <TextBlock Text="Vigane"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"/>
                    <TextBlock Text="{Binding InvalidItems}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource ErrorBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Search and Items List -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search and Filter Controls -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,8,0">
                    <TextBox.Tag>Otsi üksusi...</TextBox.Tag>
                </TextBox>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Sorteeri: andmed"
                            Command="{Binding SortByDataCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,4,0"
                            Padding="8,4"/>
                    <Button Content="Sorteeri: tüüp"
                            Command="{Binding SortBySymbologyCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,4,0"
                            Padding="8,4"/>
                    <Button Content="Ainult kehtivad"
                            Command="{Binding FilterValidOnlyCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,4,0"
                            Padding="8,4"/>
                    <Button Content="Ainult vigased"
                            Command="{Binding FilterInvalidOnlyCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,4,0"
                            Padding="8,4"/>
                    <Button Content="Tühjenda filter"
                            Command="{Binding ClearFilterCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,4,0"
                            Padding="8,4"/>
                    <Button Content="Eemalda duplikaadid"
                            Command="{Binding RemoveDuplicatesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Padding="8,4"/>
                </StackPanel>
            </Grid>

            <!-- Items List -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding FilteredItems}"
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      GridLinesVisibility="Horizontal"
                      Background="{DynamicResource MaterialDesignPaper}"
                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                      Foreground="{DynamicResource MaterialDesignBody}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Indeks" 
                                        Binding="{Binding Index}" 
                                        Width="60"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Andmed" 
                                        Binding="{Binding Item.Data}" 
                                        Width="*"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Sümboloogia" 
                                        Binding="{Binding Item.Symbology}" 
                                        Width="120"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Kogus" 
                                        Binding="{Binding Item.Quantity}" 
                                        Width="80"
                                        IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Olek" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" 
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBlock Text="{Binding IsValid, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Vigane"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                        <Setter Property="Text" Value="Kehtiv"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Viga" 
                                        Binding="{Binding ErrorMessage}" 
                                        Width="*"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,0,0,16">
            <Button Content="Eelvaade"
                    Command="{Binding PreviewBatchCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Ekspordi CSV"
                    Command="{Binding ExportToCsvCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Ekspordi tekst"
                    Command="{Binding ExportToTextCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Ekspordi valideerimine"
                    Command="{Binding ExportValidationResultsCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Muuda"
                    Command="{Binding EditItemCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Eemalda"
                    Command="{Binding RemoveItemCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="Tühjenda kõik"
                    Command="{Binding ClearAllCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>

        <!-- Close Button -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Sulge"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>

