<Window x:Class="BarcodeApp.Views.BatchPrintOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BarcodeApp.Converters"
        Title="Print Options" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Foreground="{DynamicResource MaterialDesignBody}"
        FontSize="13"
        FontFamily="Segoe UI"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/MaterialDesignStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters -->
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Print Options"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource MaterialDesignBody}"/>
            <Button Grid.Column="1"
                    Content="Ã—"
                    FontSize="24"
                    FontWeight="Bold"
                    Width="36"
                    Height="36"
                    Padding="0"
                    Click="CloseButton_Click"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="Close"
                    Foreground="{DynamicResource MaterialDesignBody}"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,0,0,24">
            <TextBlock Text="Print Range"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource MaterialDesignBody}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="{Binding TotalItems, StringFormat='Total items: {0}'}"
                       FontSize="12"
                       Foreground="{DynamicResource MaterialDesignSecondaryTextBrush}"
                       Margin="0,0,0,16"/>
            
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="From:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBox Grid.Column="1"
                         Text="{Binding StartIndex, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,16,0"/>
                <TextBlock Grid.Column="2" 
                           Text="To:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBox Grid.Column="3"
                         Text="{Binding EndIndex, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            </Grid>
            
            <TextBlock Text="Options"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource MaterialDesignBody}"
                       Margin="0,16,0,8"/>
            <CheckBox Content="Continue on error"
                      IsChecked="{Binding ContinueOnError}"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      Margin="0,0,0,8"/>
            <CheckBox Content="Skip already printed items"
                      IsChecked="{Binding SkipPrintedItems}"
                      Style="{StaticResource MaterialDesignCheckBox}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0"/>
            <Button Content="OK"
                    Click="OkButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>

